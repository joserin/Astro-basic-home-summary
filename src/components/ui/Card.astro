---
interface Props {
  class?: string;
  [x: string]: any;
}

const { class: className, ...rest } = Astro.props;
---

<div {...rest}  class:list={['default-card',className]}>
  <slot/>
</div>

<style>
    .default-card{
      /*width: fit-content;*/
      display: flex;
      justify-content: center;
      align-items: center;
      overflow: hidden;
      padding-bottom: 0.5rem;
    }
</style>