---
interface Props {
  description: string
  title: string
}

const {title, description} = Astro.props
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description} />
		<title>{title}</title>
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	main{
		width: 70%;
		margin: 0 auto;
	}
	@media only screen and (max-width: 768px) {
        main {
            width: 100%;
			margin: 0.25rem;
        }
    }
</style>
